# DeepSeek API Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
# Use deepseek-reasoner for thinker mode (深度思考模式)
# For faster responses without extended reasoning, use deepseek-chat
DEEPSEEK_MODEL=deepseek-reasoner

# Alibaba DashScope API Configuration
DASHSCOPE_API_KEY=your_dashscope_api_key_here
DASHSCOPE_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# Model Parameters
TEMPERATURE=0.7
# Higher max_tokens for reasoner model to accommodate reasoning chains
MAX_TOKENS=4000
TOP_P=0.9

# Debate Parameters
MAX_FREE_DEBATE_ROUNDS=3
CROSS_EXAMINATION_ROUNDS=2

# Logging
LOG_LEVEL=INFO
LOG_FILE=data/logs/debate.log
